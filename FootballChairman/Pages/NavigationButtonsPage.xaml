<Page x:Class="FootballChairman.Pages.NavigationButtonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FootballChairman.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationButtonsPage"
      DataContext="{Binding NavigationButtons, Source={StaticResource Locator}}">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button
                Content="Next Games"
                Width="100"
                Command="{Binding OpenMatchOverviewPageCommand}"/>
            <Button 
                Content="Fixtures"
                Width="100"
                Command="{Binding OpenFixturesPageCommand}"/>
            <Button 
                Content="Club"
                Width="100"
                Command="{Binding OpenClubPageCommand}"/>
        </StackPanel>
    </Grid>
</Page>
